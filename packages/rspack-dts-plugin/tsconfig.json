{
  "compilerOptions": {
    "outDir": "./dist-tsc",
    "baseUrl": "./",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true, // 启用ES模块互操作性
    "allowSyntheticDefaultImports": true,
    "target": "ES2015",
    "lib": ["ES6", "DOM", "ES2015", "ES2017"],
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}